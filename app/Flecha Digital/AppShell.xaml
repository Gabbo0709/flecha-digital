<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Flecha_Digital.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Flecha_Digital.View"
    Shell.FlyoutBehavior="Disabled">
    
    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.BackgroundColor" Value="#DBF6EC"/>
                <Setter Property="Shell.ForegroundColor" Value="#AA1A26"/>
                <Setter Property="Shell.TitleColor" Value="White"/>
            </Style>
            <Style BasedOn="{StaticResource BaseStyle}" TargetType="Shell"/>
        </ResourceDictionary>
    </Shell.Resources>
    <ShellContent
        Shell.NavBarIsVisible="True"
        Title="Menu principal"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage" />

</Shell>
